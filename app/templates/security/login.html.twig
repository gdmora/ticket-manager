{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
<div class="container">
    <div class="mt-2">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Has iniciado sesión como: {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                </div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión</h1>
            <div class="form-group">
                <label for="inputEmail">Correo</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Ingrese su correo" autocomplete="email" required autofocus>
            </div>
            <div class="form-group mt-2">
                <label for="inputPassword">Contraseña</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Ingrese su contraseña" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="text-center mt-2">
                <button class="btn btn-lg btn-primary" type="submit">
                    Iniciar sesión
                </button>
            </div>
        </form>
        <div class="text-center mt-2">
            <a class="link-primary" href="{{ path('app_register')}}">¿No tiene cuenta? Registrarse</a>
        </div>
    </div>
</div>
{% endblock %}

