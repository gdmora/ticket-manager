{% extends 'base.html.twig' %}

{% block title %}Atender ticket{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-2">
            <h1 class="h3 mb-3 font-weight-normal">Atender ticket</h1>
            <h2 class="h4 mb-3 font-weight-normal">Usuario: {{ app.user.email }}</h2>
            {{form_start(form)}}
            <div class="form-group">
                {{form_label(form.cliente, 'Cliente')}}
                {{form_widget(form.cliente, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.problema, 'Problema')}}
                {{form_widget(form.problema, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.solucion, 'Soluci√≥n')}}
                {{form_widget(form.solucion, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.horas, 'Horas')}}
                {{form_widget(form.horas, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group text-center">
                    <button class="btn btn-primary mt-2">Atender</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}
