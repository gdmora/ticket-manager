{% extends 'base.html.twig' %}

{% block title %}Nuevo ticket{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-2">
            <h1 class="h3 mb-3 font-weight-normal">Generar nuevo ticket</h1>
            <h2 class="h4 mb-3 font-weight-normal">Usuario: {{ app.user.email }}</h2>
             {{form_start(form)}}
                {{ form_row(form.problema, {
                    label: 'Describa su problema',
                    'attr': {'class':'form-control'}
                }) }}
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}
